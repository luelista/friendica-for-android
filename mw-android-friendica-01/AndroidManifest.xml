    <!-- PERMISSIONS -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    
	<permission android:name="de.wikilab.android.friendica01.permission.C2D_MESSAGE" android:protectionLevel="signature" />

	<!-- App receives GCM messages. -->
	<uses-permission android:name="com.google.android.c2dm.permission.RECEIVE" />
	<!-- GCM connects to Google Services. -->
	<uses-permission android:name="android.permission.INTERNET" /> 
	<!-- GCM requires a Google account. -->
	<uses-permission android:name="android.permission.GET_ACCOUNTS" />
	<!-- Keeps the processor from sleeping when a message is received. -->
	<uses-permission android:name="android.permission.WAKE_LOCK" />
	
    <uses-sdk
        android:minSdkVersion="9"
        android:targetSdkVersion="11" />

    <application
        android:icon="@drawable/ic_friendika"
        android:label="@string/app_name" >

        <receiver android:name="com.google.android.gcm.GCMBroadcastReceiver" android:permission="com.google.android.c2dm.permission.SEND" >
		  <intent-filter>
		    <action android:name="com.google.android.c2dm.intent.RECEIVE" />
		    <action android:name="com.google.android.c2dm.intent.REGISTRATION" />
		    <category android:name="de.wikilab.android.friendica01" />
		  </intent-filter>
		</receiver>
		
        <!-- SERVICES -->
        <service android:name=".FileUploadService" />
        <service android:name=".GCMIntentService" />
        <service android:name=".NotificationCheckerService" />

        <!-- ACTIVIIES -->
        <activity
            android:name="de.wikilab.android.friendica01.activity.HomeActivity"
            android:label="@string/app_name"
            android:theme="@android:style/Theme.Light.NoTitleBar"
            android:windowSoftInputMode="stateHidden" 
            android:configChanges="orientation">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <!--        <activity
            android:name=".TimelineActivity"
            android:label="@string/app_name"
            android:theme="@android:style/Theme.Light.NoTitleBar" >
        </activity>        -->

        <activity
            android:name="de.wikilab.android.friendica01.activity.GenericContentActivity"
            android:label="@string/app_name"
            android:theme="@android:style/Theme.Light.NoTitleBar"
            android:windowSoftInputMode="stateHidden"
            android:configChanges="orientation" >
        </activity>
        <activity
            android:name=".PhotoGalleryActivity"
            android:label="@string/app_name"
            android:theme="@android:style/Theme.Light.NoTitleBar" >
        </activity>
        <activity
            android:name="de.wikilab.android.friendica01.activity.UserProfileActivity"
            android:label="@string/app_name"
            android:theme="@android:style/Theme.Light.NoTitleBar" >
        </activity>
        <activity
            android:name="de.wikilab.android.friendica01.activity.MessageDetailActivity"
            android:label="@string/app_name"
            android:theme="@android:style/Theme.Light.NoTitleBar" >
        </activity>
        <activity
            android:name="de.wikilab.android.friendica01.activity.PreferencesActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="de.wikilab.android.friendica01.activity.WritePostActivity"
            android:label="@string/app_name"
            android:theme="@android:style/Theme.Light.NoTitleBar"
            android:windowSoftInputMode="adjustResize"
            android:configChanges="orientation" >
            <intent-filter android:label="@string/intf_fileupload2" >
                <action android:name="android.intent.action.SEND" />

                <category android:name="android.intent.category.DEFAULT" />
                <data android:mimeType="text/*" />
            </intent-filter>
        </activity>
        <activity
            android:name="de.wikilab.android.friendica01.activity.FriendicaImgUploadActivity"
            android:label="@string/app_name"
            android:theme="@android:style/Theme.Light.NoTitleBar" 
            android:configChanges="orientation">
            <intent-filter android:label="@string/intf_fileupload2" >
                <action android:name="android.intent.action.SEND" />

                <category android:name="android.intent.category.DEFAULT" />
                <data android:mimeType="image/*" />
            </intent-filter>
        </activity>
    </application>

</manifest>
